      <assets>
        <icon>icon.png</icon>
      </assets>
    </extension>
  </addon>
  <addon id="plugin.video.ophim" name="OPhim" version="1.0.0" provider-name="Gemini">
    <requires>
      <import addon="xbmc.python" version="3.0.0" />
      <import addon="script.module.requests" version="2.25.1" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="vi">Xem phim từ OPhim API V1</summary>
      <description lang="vi">Hỗ trợ xem phim mới, phim bộ, phim lẻ và tìm kiếm trực tuyến.</description>
      <language>vi</language>
      <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
      </assets>
    </extension>
  </addon>
  <addon id="script.module.requests" name="requests" version="2.25.1+matrix.1" provider-name="Python Software Foundation">
